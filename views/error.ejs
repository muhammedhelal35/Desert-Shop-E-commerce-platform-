<% locals.title = errorCode ? `${errorCode} Error` : 'Error' %>

<div class="error-container">
  <div class="error-card">
    <!-- Illustration Section -->
    <div class="error-illustration" aria-hidden="true">
      <% if (errorCode === '404') { %>
        <img src="/images/404-illustration.svg" alt="" width="150" height="150">
      <% } else if (errorCode === '403') { %>
        <img src="/images/403-illustration.svg" alt="" width="150" height="150">
      <% } else if (errorCode === '500') { %>
        <img src="/images/500-illustration.svg" alt="" width="150" height="150">
      <% } else { %>
        <img src="/images/error-illustration.svg" alt="" width="150" height="150">
      <% } %>
    </div>
    
    <!-- Header Section -->
    <header class="error-header">
      <h1 class="error-code"><%= errorCode || 500 %></h1>
      <h2 class="error-title"><%= errorMessage || 'Something went wrong' %></h2>
    </header>
    
    <!-- Main Content Section -->
    <main class="error-content">
      <div class="error-message">
        <p class="error-description">
          <% if (errorCode === '404') { %>
            The page you're looking for doesn't exist or has been moved.
          <% } else if (errorCode === '403') { %>
            You don't have permission to access this resource.
          <% } else if (errorCode === '401') { %>
            Please log in to access this resource.
          <% } else if (errorCode === '400') { %>
            The request couldn't be understood by the server due to malformed syntax.
          <% } else if (errorCode === '500') { %>
            We're experiencing some technical difficulties. Our team has been notified.
          <% } else { %>
            <%= errorDescription || 'We apologize, but an unexpected error has occurred. Our team has been notified.' %>
          <% } %>
        </p>
        
        <% if ((typeof showRetry !== 'undefined' && showRetry) && !['401', '403', '404'].includes(errorCode)) { %>
          <button class="btn btn-secondary retry-btn" onclick="window.location.reload()" aria-label="Retry last action">
            <i class="fas fa-sync-alt"></i> Try Again
          </button>
        <% } %>
      </div>
      
      <!-- Action Buttons -->
      <div class="error-actions" role="group" aria-label="Error recovery options">
        <a href="/" class="btn btn-primary" aria-label="Return to home page">
          <i class="fas fa-home"></i> Home
        </a>
        <button class="btn btn-secondary" onclick="window.history.back()" aria-label="Go back to previous page">
          <i class="fas fa-arrow-left"></i> Back
        </button>
        <a href="/contact" class="btn btn-outline" aria-label="Contact support team">
          <i class="fas fa-headset"></i> Support
        </a>
      </div>
      
      <!-- Debug Information (Dev only) -->
      <% if (process.env.NODE_ENV === 'development' && typeof errorStack !== 'undefined' && errorStack) { %>
        <details class="error-details">
          <summary>Technical Details</summary>
          <div class="error-stack-container">
            <pre class="error-stack"><%= errorStack %></pre>
            <button class="btn-copy" onclick="copyErrorDetails()" aria-label="Copy error details">
              <i class="fas fa-copy"></i>
            </button>
          </div>
        </details>
      <% } %>
      
      <!-- Search Option for 404 errors -->
      <% if (errorCode === '404') { %>
        <div class="error-search">
          <p>Can't find what you're looking for? Try searching:</p>
          <form action="/search" method="get" role="search" class="search-form">
            <div class="search-input-container">
              <input type="search" name="q" placeholder="Search..." aria-label="Search website">
              <button type="submit" class="btn btn-primary search-btn">
                <i class="fas fa-search"></i> <span class="search-text">Search</span>
              </button>
            </div>
          </form>
        </div>
      <% } %>
      
      <!-- Suggested Links for Common Errors -->
      <% if (errorCode === '404') { %>
        <div class="suggested-links">
          <h3>Popular Pages</h3>
          <ul>
            <li><a href="/products">Browse Products</a></li>
            <li><a href="/about">About Us</a></li>
            <li><a href="/contact">Contact Us</a></li>
          </ul>
        </div>
      <% } %>
    </main>
    
    <!-- Footer Section -->
    <footer class="error-footer">
      <p>Need immediate help? <a href="/contact" aria-label="Contact our support team">Contact our support team</a> or call us at <a href="tel:+18005551234">1-800-555-1234</a></p>
      <div class="error-id">
        <small>Error ID: <%= typeof errorId !== 'undefined' ? errorId : Date.now().toString(36) %></small>
      </div>
    </footer>
  </div>
</div>

<!-- Client-side script for enhanced functionality -->
<script>
  function copyErrorDetails() {
    const errorStack = document.querySelector('.error-stack');
    if (errorStack) {
      navigator.clipboard.writeText(errorStack.textContent)
        .then(() => {
          const btn = document.querySelector('.btn-copy');
          if (btn) {
            btn.innerHTML = '<i class="fas fa-check"></i>';
            setTimeout(() => {
              btn.innerHTML = '<i class="fas fa-copy"></i>';
            }, 2000);
          }
        })
        .catch(err => {
          console.error('Failed to copy: ', err);
          alert('Failed to copy error details');
        });
    }
  }
  
  // Focus on the first interactive element for better keyboard navigation
  document.addEventListener('DOMContentLoaded', () => {
    const firstInteractive = document.querySelector('.error-actions a, .error-actions button');
    if (firstInteractive) firstInteractive.focus();
    
    // Add animation class after DOM is loaded
    const errorCard = document.querySelector('.error-card');
    if (errorCard) {
      setTimeout(() => {
        errorCard.classList.add('animate-in');
      }, 100);
    }
  });
</script>

