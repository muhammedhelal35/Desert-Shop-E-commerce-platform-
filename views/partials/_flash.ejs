<% if (success_msg) { %>
  <div class="flash-message flash-success fade-in" role="alert">
    <div class="flash-icon">
      <i class="fas fa-check-circle"></i>
    </div>
    <div class="flash-content">
      <h4 class="flash-title">Success!</h4>
      <p class="flash-text"><%= success_msg %></p>
    </div>
    <button class="flash-close" aria-label="Close message">
      <i class="fas fa-times"></i>
    </button>
  </div>
<% } %>

<% if (error_msg) { %>
  <div class="flash-message flash-error fade-in" role="alert">
    <div class="flash-icon">
      <i class="fas fa-exclamation-triangle"></i>
    </div>
    <div class="flash-content">
      <h4 class="flash-title">Oops!</h4>
      <p class="flash-text"><%= error_msg %></p>
    </div>
    <button class="flash-close" aria-label="Close message">
      <i class="fas fa-times"></i>
    </button>
  </div>
<% } %>


<style>
  .flash-message {
    position: fixed;
    top: 100px;
    right: 2rem;
    max-width: 400px;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(20px);
    border-radius: var(--radius);
    box-shadow: var(--shadow-lg);
    border: 1px solid rgba(255, 255, 255, 0.3);
    padding: 1.5rem;
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    z-index: 1000;
    transform: translateX(100%);
    transition: all var(--transition);
    border-left: 4px solid;
  }

  .flash-message.show {
    transform: translateX(0);
  }

  .flash-success {
    border-left-color: var(--secondary);
  }

  .flash-error {
    border-left-color: #e74c3c;
  }

  .flash-icon {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
  }

  .flash-success .flash-icon {
    background: linear-gradient(135deg, var(--secondary), var(--secondary-dark));
    color: white;
  }

  .flash-error .flash-icon {
    background: linear-gradient(135deg, #e74c3c, #c0392b);
    color: white;
  }

  .flash-content {
    flex: 1;
    min-width: 0;
  }

  .flash-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.1rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    color: var(--text);
  }

  .flash-text {
    margin: 0;
    color: var(--muted);
    line-height: 1.5;
    font-size: 0.95rem;
  }

  .flash-close {
    background: none;
    border: none;
    color: var(--muted);
    cursor: pointer;
    padding: 0.5rem;
    border-radius: var(--radius-small);
    transition: all var(--transition);
    flex-shrink: 0;
  }

  .flash-close:hover {
    background: rgba(0, 0, 0, 0.05);
    color: var(--text);
  }

  
  .flash-message.fade-in {
    animation: slideInRight 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }

  @keyframes slideInRight {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }


  @media (max-width: 768px) {
    .flash-message {
      top: 80px;
      right: 1rem;
      left: 1rem;
      max-width: none;
      transform: translateY(-100%);
    }

    .flash-message.show {
      transform: translateY(0);
    }

    @keyframes slideInRight {
      from {
        transform: translateY(-100%);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }
  }

  @media (max-width: 480px) {
    .flash-message {
      padding: 1rem;
      gap: 0.8rem;
    }

    .flash-icon {
      width: 35px;
      height: 35px;
      font-size: 1rem;
    }

    .flash-title {
      font-size: 1rem;
    }

    .flash-text {
      font-size: 0.9rem;
    }
  }
</style>

<script>
  
  document.addEventListener('DOMContentLoaded', function() {
    const flashMessages = document.querySelectorAll('.flash-message');
    
    flashMessages.forEach(message => {
      
      setTimeout(() => {
        message.classList.add('show');
      }, 100);
      
      
      setTimeout(() => {
        message.classList.remove('show');
        setTimeout(() => {
          message.remove();
        }, 500);
      }, 5000);
      
      const closeBtn = message.querySelector('.flash-close');
      if (closeBtn) {
        closeBtn.addEventListener('click', () => {
          message.classList.remove('show');
          setTimeout(() => {
            message.remove();
          }, 500);
        });
      }
    });
  });
</script> 